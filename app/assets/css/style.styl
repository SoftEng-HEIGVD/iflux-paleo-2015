*, *before, *after
  box-sizing border-box

body
  font-family Arial,Verdana,sans-serif
  background-color #1293D2 !important

h1, p
  padding 10px

.center
  text-align center

.layout
  display flex
  flex-direction column

  a
    text-decoration none
    outline none
    color #fff

    &:hover
      color #FFE800

    &:active
      color #FFE800

.layout-header
  flex 1

  .title
    display flex

    .title-left
      flex 1

    .title-center
      margin 5px 25px
      flex 3

      p
        padding 0
        margin 0

      p.festival
        font-weight bold
        font-size 36px

      p.dates
        font-weight bold
        margin-top -10px
        font-size 18px

    .title-right
      flex 1

.layout-body
  flex 8

.layout-footer
  flex 1

  p
    text-align center
    font-size 16px

.axis path, .axis line
  fill none
  stroke #000
  shape-rendering crispEdges

.axisText
  font-size 1.5em
  font-weight bold

.area1
  fill #4fc55a

.area2
  fill #b92a1e

.line1
  fill none
  stroke #e2b24c
  stroke-width 2px

.line2
  fill none
  stroke #481315
  stroke-width 2px

.widget-layout
  margin 0 10px
  display flex

  .widget-layout-left
    flex 1

  .widget-layout-center
    flex 3

  .widget-layout-right
    flex 1

.widget-container
  border 2px black solid
  background-color #efefef
  flex-direction column
  border-radius 5px
  display flex
  margin 5px

  h3
    border-bottom 1px solid black
    background-color rgba(11, 58, 81, 0.93)
    text-align center
    padding 10px 0
    color #fff
    margin 0

  .widget
    flex-direction row
    margin-top 5px
    display flex
    padding 10px

    .w-left
      flex 1

    .w-left-2
      flex 2

    .w-left-3
      flex 3

    .w-right
      margin-left 1em
      max-width 250px
      flex 1

      .btn
        width 100%

.graph
  height 0
  padding-top 58.82% /* 500px/850px */
  position relative

  svg
    position absolute
    display block
    height 100%
    width 100%
    left 0
    top 0

table.tiles
  border-collapse separate
  border-spacing 3px

  td, th
    vertical-align middle
    border-radius 4px
    text-align center
    font-size .8em
    padding 2px
    height 34px
    width 34px

  td.tile
    border 1px solid white
    cursor pointer

  td.tile:hover
    border 1px solid black

  td.tile-head
    background-color #eae6d4

  td.tile-row-head
    background-color #eae6d4

.tiles-legend
  background #F3F3F3 none repeat scroll 0 0
  border 1px solid #F0F0F0
  border-radius 3px
  line-height 11px
  overflow hidden
  padding 5px 7px
  font-size 11px
  margin auto
  width 192px
  color #777

  ul
    list-style-type none
    padding 0

    li
      margin-right 1px
      height 15px
      width 15px
      float left

  p
    padding 0
    margin 2px 0 0

  .more
    float right

  .less
    float left

.q1
  background #5E4FA2

.q2
  background #3288BD

.q3
  background #66C2A5

.q4
  background #ABDDA4

.q5
  background #E6F598

.q6
  background #f6faaa

.q7
  background #FEE08B

.q8
  background #FDAE61

.q9
  background #F46D43

.q10
  background #D53E4F

.q11
  background #9E0142

.no-data
  background-color #d2d2d2

pulsorBackgroundColor = #efefef
pulsorContainerWidth = 110px
dotMarginFactor = 4
pulsorWidth = 40px
pulsorColors = {
  green: hsl(125, 100%, 55%),
  red: hsl(350, 100%, 55%)
}

shadow($b, $s, $sm, $c)
  box-shadow: 0 0 8px 6px $c, 0 0 $b $s pulsorBackgroundColor, 0 0 $b $s + $sm $c

.pulsors
  justify-content center
  margin-top 5px
  display flex

.pulsor-container
  width pulsorContainerWidth
  height pulsorContainerWidth
  padding ((pulsorContainerWidth - pulsorWidth) / 2)px
  margin 5px

  .pulsor-anim
    transition(all 0.2s)
    height pulsorWidth
    width pulsorWidth
    border-radius 50%

    &:nth-child(n+2)
      margin-left: (pulsorWidth * dotMarginFactor)

  .pulsor-entries
    background: lighten(pulsorColors.green, 5%)

  .pulsor-exits
    background: lighten(pulsorColors.red, 5%)

  .pulsor-anim-entries
    animation pulsor-keyframes-1 2s 0s ease-out

  .pulsor-anim-exits
    animation pulsor-keyframes-2 2s 0s ease-out

@keyframes pulsor-keyframes-1
  0%
    shadow(0px, 0px, 0px, rgba(pulsorColors.green, 0))
  10%
    shadow(12px, 10px, 4px, pulsorColors.green)
  100%
    shadow(0px, 40px, 0px, rgba(pulsorColors.green, 0))

@keyframes pulsor-keyframes-2
  0%
    shadow(0px, 0px, 0px, rgba(pulsorColors.red, 0))
  10%
    shadow(12px, 10px, 4px, pulsorColors.red)
  100%
    shadow(0px, 40px, 0px, rgba(pulsorColors.red, 0))

@media(max-width 1210px)
  .graph
    text-align center

  .widget-layout
    display flex
    flex-direction column

    .widget-layout-left
      flex 1
      order 1

    .widget-layout-center
      flex 1
      order 3

    .widget-layout-right
      flex 1
      order 2

  .widget
    flex-direction column !important
    justify-content center

    .w-right
      max-width 100% !important
      margin-left 0 !important

  table.tiles
    margin auto

  .pulsors
    flex-direction row !important